---
import BaseLayout from '../../../layouts/BaseLayout.astro'
import { getPartner } from '../../../lib/portal-api'

export const prerender = false

const partner = getPartner()
---

<BaseLayout title="Contact — Espace Partenaire Semisto">
  <div class="min-h-screen bg-stone-50 dark:bg-stone-950">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <a href="/portal/" class="inline-flex items-center gap-2 text-sm text-stone-500 hover:text-stone-700 mb-6">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Retour au portail
      </a>
      <h1 class="text-2xl font-bold text-stone-900 dark:text-white mb-2">Contacter Semisto</h1>
      <p class="text-stone-500 dark:text-stone-400 mb-8">Proposez un projet sur mesure ou posez vos questions.</p>
      <div id="contact-form-root" data-partner={JSON.stringify(partner)}></div>
      <p class="text-sm text-stone-400 mt-4">Composant ContactForm portal en cours de développement par Lovely.</p>
    </div>
  </div>
</BaseLayout>
