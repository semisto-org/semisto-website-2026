---
import BaseLayout from '../../layouts/BaseLayout.astro'

export const prerender = false

const error = Astro.url.searchParams.get('error')
---

<BaseLayout title="Connexion — Espace Partenaire Semisto">
  <div class="min-h-screen bg-stone-50 dark:bg-stone-950 flex items-center justify-center px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <div class="w-12 h-12 rounded-xl mx-auto mb-4 flex items-center justify-center" style="background: #5B5781;">
          <svg class="w-7 h-7 text-white" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-stone-900 dark:text-white">Espace Partenaire</h1>
        <p class="text-sm text-stone-500 dark:text-stone-400 mt-1">Connectez-vous à votre portail Semisto</p>
      </div>

      {error && (
        <div class="mb-4 p-3 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-sm text-red-600 dark:text-red-400 text-center">
          Identifiants invalides. Veuillez réessayer.
        </div>
      )}

      <form method="POST" action="/api/portal/login" class="bg-white dark:bg-stone-900 rounded-2xl border border-stone-200 dark:border-stone-800 p-6 space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-1.5">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="demo@partner.com"
            class="w-full px-4 py-2.5 rounded-xl border border-stone-200 dark:border-stone-700 bg-stone-50 dark:bg-stone-800 text-stone-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-[#5B5781]/50 focus:border-[#5B5781]"
          />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-1.5">Mot de passe</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-2.5 rounded-xl border border-stone-200 dark:border-stone-700 bg-stone-50 dark:bg-stone-800 text-stone-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-[#5B5781]/50 focus:border-[#5B5781]"
          />
        </div>
        <button
          type="submit"
          class="w-full py-3 rounded-xl text-sm font-semibold text-white transition-all hover:opacity-90 active:scale-[0.97]"
          style="background: #5B5781;"
        >
          Se connecter
        </button>
      </form>

      <p class="text-center text-xs text-stone-400 dark:text-stone-500 mt-6">
        Démo : demo@partner.com / partner2026
      </p>
    </div>
  </div>
</BaseLayout>
