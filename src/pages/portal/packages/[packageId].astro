---
import BaseLayout from '../../../layouts/BaseLayout.astro'
import { getPackageById } from '../../../lib/portal-api'

export const prerender = false

const { packageId } = Astro.params
const pkg = getPackageById(packageId || '')

if (!pkg) {
  return Astro.redirect('/portal/packages/')
}
---

<BaseLayout title={`${pkg.shortTitle} — Espace Partenaire Semisto`}>
  <div class="min-h-screen bg-stone-50 dark:bg-stone-950">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <a href="/portal/packages/" class="inline-flex items-center gap-2 text-sm text-stone-500 hover:text-stone-700 mb-6">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Retour aux packages
      </a>
      <div id="package-detail-root" data-package={JSON.stringify(pkg)}></div>
      <p class="text-sm text-stone-400 mt-4">Composant PackageDetail en cours de développement par Lovely.</p>
    </div>
  </div>
</BaseLayout>
